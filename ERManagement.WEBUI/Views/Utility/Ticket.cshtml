@model IEnumerable<HRManagement.Data.Supports.FeedBackVM>
@{
    ViewBag.Title = "Ticket";
}

<div id="bucket">
    <h2 id="title">Returned ticket</h2>

    @if (ViewBag.FeedBacks != null)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TicketNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <th>...</th>
                        }
                    </tr>
                </thead>

                @foreach (var item in ViewBag.FeedBacks as List<HRManagement.Data.Supports.FeedBackVM>)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @if (item.Status == false)
                            {
                                <span style="background-color:green" class="badge">OPEN</span>
                            }
                            else
                            {
                                <span style="background-color:red" class="badge">CLOSE</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TicketNo)
                        </td>
                        <td>
                            <textarea class="" style="background-color:whitesmoke;" readonly>@item.Message</textarea>
                        </td>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <td>
                                <a href="@Url.Action("TicketStatus", "Utility", new { @ID = item.Id })" class="btn btn-danger"> <span class="fa fa-trash-o"></span> </a>
                            </td>
                        }
                    </tr>
                }



            </table>
        </div>
    }
    else
    {
        <h2>EMPTY LIST!</h2>
    }
</div>
