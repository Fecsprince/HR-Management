
@{
    ViewBag.Title = "Branches";
}


<div id="bucket">

    @if (ViewBag.Msg != null)
    {
        <p id="msg" style="display:none">@ViewBag.Msg</p>
    }

    <h3 class="lead fs-3" id="title">Employee Default Passwords</h3>

    <br />






    @* TABLE BELLOW IS USED TO POPULATE ALL RECORD IN DB *@
    @if (ViewBag.AllDefaultPasswords != null)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Employee Email</th>
                        <th>Password</th>

                    </tr>
                </thead>

                <tbody class="table-group-divider">
                    @{ int i = 1;}
                    @foreach (var item in ViewBag.AllDefaultPasswords as List<HRManagement.Data.Models.EmployeeDefaultPassword>)
                    {
                        var ItemCount = ViewBag.DefaultPasswordCount;
                        <tr id="row_@item.Id">

                            <td>
                                @if (i <= ItemCount)
                                {
                                    @i
                                }

                            </td>
                            <td>@item.Email</td>
                            <td>@item.Password</td>

                        </tr>
                        i++;
                    }
                </tbody>

            </table>

        </div>
    }




</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>

<script>
    $(document).ready(function () {

        var Smsg = $("#msg").text();
        if (Smsg != "") {
            alert(Smsg);
        }


    })


</script>

