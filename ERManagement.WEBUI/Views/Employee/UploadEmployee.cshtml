
@{
    ViewBag.Title = "Upload Employee Records";
}

@if (ViewBag.Msg != null)
{
    <p id="msg" style="display:none">@ViewBag.Msg</p>
}


<div class="row">
    <div class="col">
        <section class="ftco-section" style="padding-top:0px; padding-bottom: 2px;">
            <div class="row justify-content-center">
                <div class="login-wrap">
                    <div class="img" style="background-image: url(/Images/employee4.jpg);"></div>
                    <h3 class="text-center mb-4">
                        Employee Upload
                    </h3>

                    @using (Html.BeginForm("UploadEmployee", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        
                        <div class="form-group mb-3">
                            <p>Employee Excel File</p>
                            <input type="file" id="excelfile" name="excelfile" class="form-control" placeholder="Select Employee File" />
                        </div>

                        <div style="text-align: center;" id="loaderDiv1" class="pt-2">
                            <img src="~/Images/loadingx.gif" width="80" height="80" class="img img-thumbnail" />
                        </div>

                        <div class="d-grid gap-2 col-md-12 mx-auto">
                            <input type="submit" value="Upload Now" id="btnSave" class="btn btn-primary submit fw-bold px-3 fw-bolder" />

                        </div>



                    }

                </div>
            </div>
        </section>
    </div>

</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>

<script>
    $(document).ready(function () {
        var Smsg = $("#msg").text();
        if (Smsg != "") {
            alert(Smsg);
        }

        $("#loaderDiv1").hide();

        $("#btnSave").click(function () {
            $("#loaderDiv1").show();
        })

    })
</script>

